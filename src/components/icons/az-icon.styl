az-icon {
  min-width: 16px;
  min-height: 16px;
  display: inline-flex;
  position: relative;
  align-items: center;
  border: 1px solid transparent;
  &[register] {
    display: none;
  }
  & > svg {
    flex: 1;
    align-self: center;
  }
  &.extra-small {
    min-width: 8px;
    min-height: 8px;
  }
}
