az-tabs {
  display: block;
  .az-tabs__tabs {
    border-bottom: 1px solid #666;
    ul {
      display: inline-flex;
      position: relative;
      margin: 0;
      padding: 0;
    }
    li {
      flex: 1;
      margin: 0;
      border-top-left-radius: var(--az-border-radius-mini);
      border-top-right-radius: var(--az-border-radius-mini);
      cursor: pointer;
      padding: 0.5em 0.5em;
      list-style: none;
      white-space: nowrap;
    }
    li.active {
      background-color: var(--az-highlight-color);
      border-bottom: none;
    }
  }
  .az-tabs__indicator {
    display: inline-block;
    position: absolute;
    bottom: 0;
    left: 0;
    transform: translateY(100%);
    transition: all ease var(--az-transition-duration-default);
    background-color: var(--az-caption-color);
    width: 100%;
    height: 1px;
  }
  content > :not(.visible) {
    display: none;
  }
}