:host button {
  box-sizing: border-box;
  height: 100%;
  padding: 0 1.5em;
  border-top: 1px solid rgba(255,255,255,.1);
  border-bottom: 1px solid rgba(0,0,0,.1);
  border-radius: 3px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #171717;
  cursor: pointer;
  color: #bdbdbd;
  background-image: linear-gradient(#585858,#444);
  min-width: 20px;
  border: 1px solid #171717;
  border-radius: 3px;
  font-weight: 700;
  font-family: Roboto,-apple-system,BlinkMacSystemFont,'Helvetica Neue','Segoe UI',Oxygen,Ubuntu,Cantarell,'Open Sans',SourceHanSansCN-Normal,sans-serif;
  line-height: 1em;
  font-size: 1rem;
  height: 26px;
  outline: 0;
}

::slotted(.icon) {
  font-style: normal;
}


:host(.mini) button{
  font-size: .66666667rem;
  height: 18px
}

:host(.tiny) button{
  font-size: .91666667rem;
  height: 21px
}

:host(.small) button{
  font-size: .91666667rem;
  height: 24px
}

:host {
  font-size: 1rem;
  height: 26px
}

:host(.large) button{
  font-size: 1.16666667rem;
  height: 29px
}

:host(.big) button{
  font-size: 1.33333333rem;
  height: 33px
}

:host(.huge) button{
  font-size: 1.5rem;
  height: 36px
}

:host(.massive) button{
  font-size: 1.83333333rem;
  height: 44px
}

:host(:hover) {
  background-image: linear-gradient(#626262, #4e4e4e);
  color: #d1d1d1
}

:host([focused]) {
  border-color: #fd942b
}

:host([pressed]) {
  color: #8b8b8b;
  background: #3a3a3a
}