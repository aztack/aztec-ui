az-progress-bar {
  progress {
    -webkit-appearance: none;
    appearance: none;
    &::-webkit-progress-bar {
      background-color: var(--az-border-color);
      border-radius: 3px;
      height: 5px;
    }
    &::-webkit-progress-value {
      background-color: #ddd;
      border-radius: 3px;
    }
  }
  progress {
    height: 8px;
  }
  .az-progress-bar__caption {
    margin-right: 0.5em;
  }
}