az-input {
  position: relative;
  display: inline-flex;
  input {
    flex-grow: 1;
    outline: 0;
    border: none;
    border: 1px solid #888;
    border-radius: var(--az-border-radius-mini);
    background: #252525;
    padding: 2px;
    color: var(--az-caption-color);
  }
  &:hover input[type=text] {
    border-color: var(--az-caption-color);
  }
  .az-input-caption {
    margin-right: 0.5em;
  }
  az-icon.clear {
    position: absolute;
    right: 2px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    .icon path {
      fill: var(--az-primary-color);
    }
    &:hover .icon path{
      fill: var(--az-caption-color);
    }
  }
  &.empty az-icon {
    display: none;
  }
  .color-picker {
    display: none;
    position: absolute;
    background-color: var(--az-primary-color);
    &.left {
      left: 0;
    }
    &.bottom {
      bottom: 0;
      transform: translateY(100%) translateY(4px);
    }
    &.right {
      right: 0;
    }
    &.top {
      top: 0;
      transform: translateY(-100%) translateY(-4px)
    }
  }
}