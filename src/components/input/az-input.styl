az-input {
  position: relative;
  display: inline-flex;
  input {
    flex-grow: 1;
    outline: 0;
    border: none;
    border: 1px solid var(--az-border-color);
    border-radius: var(--az-border-radius-mini);
    background: #252525;
    padding: 2px 0.4em;
    color: var(--az-caption-color);
    width: 10em;
  }
  input[type=number]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    display: none;
  }
  &:hover input {
    border-color: var(--az-caption-color);
  }
  .az-input-caption {
    margin-right: 0.5em;
    align-self: center;
  }
  az-icon.clear {
    position: absolute;
    right: 2px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
    .icon path {
      fill: var(--az-primary-color);
    }
    &:hover .icon path{
      fill: var(--az-caption-color);
    }
  }
  &.empty az-icon {
    display: none;
  }
  .color-picker {
    display: none;
    position: absolute;
    background-color: var(--az-primary-color);
    &.left {
      left: 0;
    }
    &.bottom {
      bottom: 0;
      transform: translateY(100%) translateY(4px);
    }
    &.right {
      right: 0;
    }
    &.top {
      top: 0;
      transform: translateY(-100%) translateY(-4px)
    }
  }
  &.az-input-number {
    input {
      padding-right: 32px;
    }
    .az-input__adjustor {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      display: inline-flex;
      align-items: center;
      .az-icon {
        height: 100%;
        border-left: 1px solid var(--az-border-color);
        path {
          fill: var(--az-border-color);
        }
      }
    }
    &:hover .az-input__adjustor .az-icon {
      border-color: var(--az-caption-color);
    }
    & .az-icon:hover {
      path {
        fill: var(--az-caption-color);
      }
    }
  }

}
