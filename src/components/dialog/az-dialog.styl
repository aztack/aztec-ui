az-dialog {
  font-family: var(--az-font-family);
  position: fixed;
  border-radius: var(--az-border-radius-mini);
  border: 1px solid #727272;
  background-color: var(--az-primary-color);
  box-shadow: 3px 2px 4px 0px rgba(0, 0, 0, 0.2)
  z-index: var(--az-zindex-dialog);
  padding: 1em;
  color: var(--az-caption-color);
}

az-dialog.center {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
az-dialog {
  display: flex;
  padding: 1px;
  flex-direction: column;
  &.center {
    top: 38.2%;
  }
  .az-dialog__header {
    text-align: center;
    line-height: 2em;
    &:hover {
      background-color: var(--az-border-color);
    }
  }
  .az-dialog__title {
    font-size: var(--az-font-size-normal);
  }
  .az-dialog__icons {
    float: right;
    az-icon {
      cursor: pointer;
      vertical-align: middle;
    }
  }
  .az-dialog__body {
    flex: 1;
  }
  .az-dialog__footer {
    bottom: 0;
    display: flex;
    justify-content: flex-end;
    padding: 0.5em;
    & az-button {
      margin-left: 0.5em;
    }
  }
}