az-tooltip {
  font-size: var(--az-font-size-normal);
  background-color: var(--az-tooltip-color);
  padding: 1em;
  border: 1px solid var(--az-border-color);
  width: auto;
  height: auto;
  position: absolute;
  box-shadow: 3px 2px 4px 0px rgba(0, 0, 0, 0.2)
  z-index: var(--az-zindex-tooltip);
  border-radius: var(--az-border-radius-mini);
  &::before {
    content: '';
    display: inline-block;
    width: 0;
    height: 0;
    position: absolute;
    border: 6px solid transparent;
    border-color: transparent var(--az-tooltip-color) var(--az-tooltip-color) transparent;
    box-shadow: 1px 1px 0px 0px var(--az-border-color);
  }
  &.top {
    top: 0;
    transform: translate(0, -100%) translateY(-1em);
    &::before {
      left: 50%;
      bottom: 0;
      transform: rotate(45deg) translate(0, 70%);
    }
  }
  &.bottom {
    bottom: 0;
    transform: translate(0, 100%) translateY(1em);
    &::before {
      top: 0;
      left: 50%;
      transform: rotate(-135deg) translate(70%, 0%);
    }
  }
  &.right {
    right: 0;
    transform: translate(100%, 0) translateX(1em);
    &::before {
      left: 0;
      top: 50%;
      transform: translate(-45%, -50%) rotate(135deg)
    }
  }
  &.left {
    left: 0;
    transform: translate(-100%, 0) translateX(-1em);
    &::before {
      right: 0;
      top: 50%;
      transform: translate(45%, -50%) rotate(-45deg)
    }
  }
}