az-color-picker {
  display: inline-block;
  width: 232px;
  border: 1px solid #727272;
  padding: 4px;
  border-radius: var(--az-border-radius-mini);
  .az-color-picker_panel {
    position: relative;
    overflow: hidden;
    height: 124px;
    background-image:
      linear-gradient(0deg, #000, transparent),
      linear-gradient(90deg, #fff,transparent);
  }
  .az-color-picker_straw {
    position: absolute;
    transform: translate(-50%,-50%);
    width: 8px;
    height: 8px;
    border-radius: 100%;
    background-image: radial-gradient(circle, white, white);
    pointer-events: none;
    box-shadow: 0 0 2px 0px black;
  }
  az-slider {
    width: 100%;
    input[type=range] {
      width: 100%;
      margin: 0;
      &::-webkit-slider-thumb {
        border-radius: 100%
        background: white;
        transform: scale(1.5);
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.75);
      }
    }
  }
  .az-color-picker_value {
    display: flex;
  }
  .az-color-picker_current-color {
    display: inline-block;
    width: 16px;
    height: 16px;
    margin-right: 2px;
    cursor: pointer;
    position: relative;
    &::before, & i {
      position: absolute;
      content: '';
      display: inline-block;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
    &::before {
      background-image:
          linear-gradient(45deg, white 25%, transparent 25%),
          linear-gradient(-45deg, white 25%, transparent 25%),
          linear-gradient(45deg, transparent 75%, white 75%),
          linear-gradient(-45deg, transparent 75%, white 75%);
      background-size: 16px 16px, 16px 16px, 16px 16px, 16px 16px;
      background-position: 0 0, 0 8px, 8px -8px, -8px 0px;
    }
  }
  .az-color-picker_color-value {
    flex: auto;
    outline: none;
    border: none;
    input {
      width: 100%;
      text-align: center;
      border: none;
      border-radius: 0;
    }
  }
}