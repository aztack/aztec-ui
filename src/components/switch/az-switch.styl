az-switch {
  cursor: pointer;
  .az-switch__caption {
    margin-right: 0.5em;
  }
  &:hover .button::before {
    background-color: #eee;
  }
  .button {
    width: 36px;
    height: 16px;
    display: inline-block;
    vertical-align: middle;
    border: 1px solid #727272;
    border-radius: 8px;
    transition: all 200ms;
    position: relative;
    &::before {
      content: '';
      position: absolute;
      display: inline-block;
      width: 12px;
      height: 12px;
      left: 0;
      transition: all 200ms;
      border-radius: 100%;
      background-color: #ddd;
      margin: 1px;
    }
    &.on {
      background-color: #727272;
      &::before {
        left: 100%;
        transform: translateX(-100%) translateX(-4px);
      }
    }
  }
}

az-switch .button.on.success {
  border-color: var(--az-success-color);
  background-color: var(--az-success-color);
}
az-switch .button.on.warning {
  border-color: var(--az-warning-color);
  background-color: var(--az-warning-color);
}
az-switch .button.on.danger {
  border-color: var(--az-danger-color);
  background-color: var(--az-danger-color);
}
az-switch .button.on.info {
  border-color: var(--az-info-color);
  background-color: var(--az-info-color);
}