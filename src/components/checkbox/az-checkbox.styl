az-checkbox {
  cursor: pointer;
  & > .az-checkbox-box {
    border: var(--az-checkbox-border-color);
    border-radius: var(--az-border-radius-mini);
    width: 15px;
    height: 15px;
    line-height: 16px;
    display: inline-block;
    margin-right: 0.5em;
    az-icon {
      transform: translate(0, -1px) scale(0);
      transition: transform var(--az-transform-animation-duration);
    }
    &.checked az-icon {
      transform: translate(0, -1px) scale(1);
      transition: transform var(--az-transform-animation-duration);
    }
  }
}